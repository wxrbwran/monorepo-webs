{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "xzl-web-shared/dist/*": ["src/*"]
    },
    "typeRoots": ["node", "node_modules/@types", "./typings"],
    "allowSyntheticDefaultImports": true
  },
  // "include": ["src"],
  "exclude": ["src/**/*.test.tsx", "src/**/*.stories.tsx",  "./dist", "./node_modules"]
}
